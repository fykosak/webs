{varType App\Modules\Core\Language $language}
{varType array $organizers}

{block title}
    {switch $language->value}
        {case 'cs'} Hlavní organizátoři
        {default} Main Organizers
    {/switch}
{/block}

{block main}
    <div class="panel color-auto">
        <section class="inner-container">
            <h1>{switch $language->value}
                {case 'cs'}Hlavní organizátoři
                {default}Main Organizers
                {/switch}</h1>
            <div class="row justify-content-center">
                {foreach $organizers as $organizer}
                    {continueIf $organizer['order'] < 9}
                    <div class="col-md-5 organiser">
                        <div class="image-cropper"
                             style="background-image: url('https://db.fykos.cz/photo/person/person_{$organizer['person']['personId']}.jpg')"></div>
                        <div class="name">{$organizer['person']['name']}</div>
                        <div class="role">
                            {$organizer['role'][$language->value]}
                        </div>
                        <div class="about">
                            {$organizer['career'][$language->value]}
                        </div>
                    </div>
                {/foreach}
                {foreach $organizers as $organizer}
                    {continueIf $organizer['order'] >= 9}
                    <div class="col-md-3 organiser">
                        <div class="image-cropper"
                             style="background-image: url('https://db.fykos.cz/photo/person/person_{$organizer['person']['personId']}.jpg')"></div>
                        <div class="name">{$organizer['person']['name']}</div>
                        <div class="role">
                            {$organizer['role'][$language->value]}
                        </div>
                        <div class="about">
                            {$organizer['career'][$language->value]}
                        </div>
                    </div>

                {/foreach}
            </div>
        </section>
    </div>

