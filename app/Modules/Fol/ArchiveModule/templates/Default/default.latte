{varType App\Modules\Core\Language $language}
{varType App\Models\Downloader\EventModel $event}

{block subtitle}
    {switch $language->value}
        {case 'cs'}Archivní stránka soutěže z {$event->begin|date: 'j. n. Y'}
        {default}Archive page of the competition from {$event->begin|date: 'j F, Y'}
    {/switch}
{/block}

{block title}
    {switch $language->value}
        {case 'cs'}Fyziklání Online {$event->begin|date: 'Y'}
        {default}Physics Brawl Online {$event->begin|date: 'Y'}
    {/switch}
{/block}

{block main}
    <div class="panel color-auto">
        <section class="inner-container">
            <div class="row">
                <div class="col-md">
                    {ifset subtitle}<div class="subheader">{include subtitle}</div>{/ifset}
                    {ifset title}<h1>{include title}</h1>{/ifset}
                    <ul>
                        <li><a n:href="Teams:">
                                {switch $language->value}
                                    {case 'cs'}Seznam přihlášených týmů
                                    {default}List of registered teams
                                {/switch}
                            </a></li>
                        <li><a n:href="Results:">
                                {switch $language->value}
                                    {case 'cs'}Výsledky soutěže
                                    {default}Results of the competition
                                {/switch}
                            </a></li>
                        <li><a n:href="Reports:">
                                {switch $language->value}
                                    {case 'cs'}Reporty účastníků
                                    {default}Competitors' reports
                                {/switch}
                            </a></li>
                    </ul>
                    <ul>
                        <li><a href="{$basePath}/download/{App\Modules\Fol\Core\BasePresenter::createEventKey($event)}/reseni.pdf">
                                {switch $language->value}
                                    {case 'cs'}Zadání a řešení úloh v českém jazyce
                                    {default}Problems and solutions in Czech
                                {/switch}
                            </a></li>
                        <li n:if="App\Modules\Fol\Core\BasePresenter::createEventKey($event) !== '2012-may'"><a href="{$basePath}/download/{App\Modules\Fol\Core\BasePresenter::createEventKey($event)}/solutions.pdf">
                                {switch $language->value}
                                    {case 'cs'}Zadání a řešení úloh v anglickém jazyce
                                    {default}Problems and solutions in English
                                {/switch}
                            </a></li>
                    </ul>
                </div>
                <div class="col-md" style="max-width: 25rem">
                    {control map true}
                </div>
            </div>
        </section>
    </div>


{/block}
