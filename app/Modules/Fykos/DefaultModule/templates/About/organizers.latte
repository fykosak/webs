                                    $phoneNumbers = [
                                        22358 => '+420 725 301 980',
                                        15214 => '+420 775 504 193',
                                        2762 => '+420 730 974 923'
                                    ];
                                    }
                                    {if isset($phoneNumbers[$organizer['personId']])}
                                    <tr>
                                        <td class="left-cell"><span class="icon"><i class="fas fa-phone"></i></span></td>
                                        <td class="right-cell">{$phoneNumbers[$organizer['personId']]}</td>
                                    </tr>
                                    {/if}
                                </table>
                            </div>
                        </div>
                    </div>
                {/foreach}
            </div>
        </div>
