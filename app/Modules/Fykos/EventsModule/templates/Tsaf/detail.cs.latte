{varType array $event}
{varType array $participants}
{varType App\Modules\Core\Language $language}

{block title}{$event['nameNew'][$lang]|firstUpper}{/block}
{block subtitle}
    {$event['begin']|date:'j. n. Y'} - {$event['end']|date:'j. n. Y'}
{/block}
{block main}
{dump $event}
    <div class="panel color-auto">
        <section class="inner-container">
            {ifset subtitle}
                <div class="subheader">{include subtitle}</div>{/ifset}
                {ifset title}<h1>{include title}</h1>{/ifset}
            <p>{$event['reportNew'][$lang]}</p>
            {if $presenter->eventHasDate($event, "2017", "11")}
                <p>Ad hoc text for the event with date 2017-12</p>
            {/if}
        </section>
    </div>
    <div class="panel color-auto">
        <section class="inner-container">
            <h1>Účastníci</h1>
            {foreach $participants as $participant}
                {$participant['name']}{if !$iterator->isLast()},{else}.{/if}
            {/foreach}
        </section>
    </div>
    <div class="panel color-auto">
        <section class="inner-container">
            <h1>Fotogalerie</h1>
            {control gallery $galleryPath}
        </section>
    </div>
{/block}
